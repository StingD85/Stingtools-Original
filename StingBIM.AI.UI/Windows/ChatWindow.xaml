<Window x:Class="StingBIM.AI.UI.Windows.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StingBIM AI Assistant"
        Height="650" Width="450"
        MinHeight="400" MinWidth="350"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15">
            <StackPanel>
                <TextBlock Text="StingBIM AI Assistant"
                           FontSize="18" FontWeight="Bold"
                           Foreground="White"/>
                <TextBlock Text="Ask me about BIM, parameters, schedules, or materials"
                           FontSize="11" Foreground="#E3F2FD" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Messages Area -->
        <ScrollViewer Grid.Row="1" x:Name="MessagesScrollViewer"
                      VerticalScrollBarVisibility="Auto"
                      Padding="10">
            <ItemsControl x:Name="MessagesContainer">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="5" Padding="10" CornerRadius="8"
                                HorizontalAlignment="{Binding Alignment}"
                                MaxWidth="320">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsUser}" Value="True">
                                            <Setter Property="Background" Value="#2196F3"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsUser}" Value="False">
                                            <Setter Property="Background" Value="White"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBlock Text="{Binding Text}" TextWrapping="Wrap">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsUser}" Value="True">
                                                <Setter Property="Foreground" Value="White"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsUser}" Value="False">
                                                <Setter Property="Foreground" Value="#333333"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Quick Actions -->
        <Border Grid.Row="2" Background="#E3F2FD" Padding="10">
            <WrapPanel>
                <Button Content="Create Wall" Click="QuickAction_Click"
                        Margin="3" Padding="8,4" Tag="create a wall"/>
                <Button Content="Add Door" Click="QuickAction_Click"
                        Margin="3" Padding="8,4" Tag="add a door"/>
                <Button Content="Room Info" Click="QuickAction_Click"
                        Margin="3" Padding="8,4" Tag="get room information"/>
                <Button Content="List Parameters" Click="QuickAction_Click"
                        Margin="3" Padding="8,4" Tag="list available parameters"/>
                <Button Content="Help" Click="QuickAction_Click"
                        Margin="3" Padding="8,4" Tag="help"/>
            </WrapPanel>
        </Border>

        <!-- Input Area -->
        <Border Grid.Row="3" Background="White" Padding="10" BorderThickness="0,1,0,0" BorderBrush="#DDD">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="InputTextBox"
                         Grid.Column="0"
                         Padding="10"
                         FontSize="14"
                         VerticalContentAlignment="Center"
                         KeyDown="InputTextBox_KeyDown"
                         Text=""
                         ToolTip="Type your message here..."/>

                <Button x:Name="SendButton"
                        Grid.Column="1"
                        Content="Send"
                        Padding="15,10"
                        Margin="10,0,0,0"
                        Background="#2196F3"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="SendButton_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
