<UserControl x:Class="StingBIM.AI.UI.Controls.ToastNotification"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Root"
             MaxWidth="380"
             MinWidth="300">

    <UserControl.Resources>
        <!-- Type-specific color resources -->
        <SolidColorBrush x:Key="InfoAccentBrush" Color="#3B82F6"/>
        <SolidColorBrush x:Key="SuccessAccentBrush" Color="#10B981"/>
        <SolidColorBrush x:Key="WarningAccentBrush" Color="#F59E0B"/>
        <SolidColorBrush x:Key="ErrorAccentBrush" Color="#EF4444"/>
        <SolidColorBrush x:Key="ProgressAccentBrush" Color="#8B5CF6"/>

        <!-- Action Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Action Button Style -->
        <Style x:Key="PrimaryActionButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource AccentHoverBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Dismiss Button Style -->
        <Style x:Key="DismissButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Opacity" Value="0.6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="1"/>
                                <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Slide-in animation -->
        <Storyboard x:Key="SlideInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="0" To="1"
                             Duration="0:0:0.2"/>
            <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                From="20,0,0,0" To="0"
                                Duration="0:0:0.2">
                <ThicknessAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut"/>
                </ThicknessAnimation.EasingFunction>
            </ThicknessAnimation>
        </Storyboard>

        <!-- Slide-out animation -->
        <Storyboard x:Key="SlideOutAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="1" To="0"
                             Duration="0:0:0.15"/>
            <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                From="0" To="20,0,0,0"
                                Duration="0:0:0.15">
                <ThicknessAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseIn"/>
                </ThicknessAnimation.EasingFunction>
            </ThicknessAnimation>
        </Storyboard>
    </UserControl.Resources>

    <Border x:Name="ToastBorder"
            Background="{DynamicResource SurfaceBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="8"
            Margin="0,4">

        <Border.Effect>
            <DropShadowEffect BlurRadius="16"
                              ShadowDepth="4"
                              Direction="270"
                              Opacity="0.2"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Type indicator bar -->
            <Border x:Name="TypeIndicator"
                    Grid.Column="0"
                    Background="{StaticResource InfoAccentBrush}"
                    CornerRadius="8,0,0,8"/>

            <!-- Icon -->
            <Border Grid.Column="1"
                    Padding="12,12,8,12"
                    VerticalAlignment="Top">
                <Grid Width="24" Height="24">
                    <!-- Static icons for non-progress -->
                    <Path x:Name="IconPathElement"
                          Data="{Binding IconPath, ElementName=Root}"
                          Fill="{StaticResource InfoAccentBrush}"
                          Stretch="Uniform"
                          Width="20" Height="20"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>

                    <!-- Spinning icon for progress -->
                    <Path x:Name="ProgressIcon"
                          Visibility="Collapsed"
                          Data="M12,4V2A10,10 0 0,0 2,12H4A8,8 0 0,1 12,4Z"
                          Fill="{StaticResource ProgressAccentBrush}"
                          Stretch="Uniform"
                          Width="20" Height="20"
                          RenderTransformOrigin="0.5,0.5">
                        <Path.RenderTransform>
                            <RotateTransform x:Name="ProgressRotation" Angle="0"/>
                        </Path.RenderTransform>
                    </Path>
                </Grid>
            </Border>

            <!-- Content -->
            <StackPanel Grid.Column="2"
                        Margin="0,10,8,10"
                        VerticalAlignment="Center">

                <!-- Title -->
                <TextBlock x:Name="TitleText"
                           Text="{Binding Title, ElementName=Root}"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource ForegroundBrush}"
                           TextWrapping="Wrap"/>

                <!-- Message -->
                <TextBlock x:Name="MessageText"
                           Text="{Binding Message, ElementName=Root}"
                           FontSize="12"
                           Foreground="{DynamicResource ForegroundSecondaryBrush}"
                           TextWrapping="Wrap"
                           Margin="0,2,0,0"/>

                <!-- Progress bar (for progress notifications) -->
                <Grid x:Name="ProgressContainer" Visibility="Collapsed" Margin="0,8,0,0">
                    <ProgressBar x:Name="ProgressBar"
                                 Height="4"
                                 Minimum="0"
                                 Maximum="100"
                                 Value="0"
                                 Background="{DynamicResource CardBrush}"
                                 Foreground="{StaticResource ProgressAccentBrush}"/>
                    <TextBlock x:Name="ProgressText"
                               Text="0%"
                               FontSize="11"
                               Foreground="{DynamicResource ForegroundSecondaryBrush}"
                               HorizontalAlignment="Right"
                               Margin="0,6,0,0"/>
                </Grid>

                <!-- Actions -->
                <ItemsControl x:Name="ActionsContainer"
                              Visibility="Collapsed"
                              Margin="0,8,0,0">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </StackPanel>

            <!-- Dismiss button -->
            <Button x:Name="DismissButton"
                    Grid.Column="3"
                    Style="{StaticResource DismissButtonStyle}"
                    Click="DismissButton_Click"
                    VerticalAlignment="Top"
                    Margin="0,8,8,0"
                    ToolTip="Dismiss">
                <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z"
                      Fill="{DynamicResource ForegroundSecondaryBrush}"
                      Width="12" Height="12" Stretch="Uniform"/>
            </Button>
        </Grid>
    </Border>
</UserControl>
