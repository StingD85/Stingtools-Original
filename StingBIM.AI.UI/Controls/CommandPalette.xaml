<UserControl x:Class="StingBIM.AI.UI.Controls.CommandPalette"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Root"
             Focusable="True"
             KeyDown="Root_KeyDown">

    <UserControl.Resources>
        <!-- Command Item Style -->
        <Style x:Key="CommandItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="6"
                                Margin="4,1">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <!-- Main Container with backdrop blur effect simulation -->
    <Border Background="#E8121212"
            CornerRadius="12"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            MinWidth="500"
            MaxWidth="600"
            MaxHeight="450">
        <Border.Effect>
            <DropShadowEffect BlurRadius="40"
                              ShadowDepth="8"
                              Direction="270"
                              Opacity="0.5"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Search Input -->
            <Border Grid.Row="0"
                    Background="{DynamicResource SurfaceBrush}"
                    CornerRadius="12,12,0,0"
                    Padding="12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Search Icon -->
                    <Path Grid.Column="0"
                          Data="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z"
                          Fill="{DynamicResource ForegroundSecondaryBrush}"
                          Width="20" Height="20"
                          Stretch="Uniform"
                          VerticalAlignment="Center"
                          Margin="0,0,10,0"/>

                    <!-- Search TextBox -->
                    <TextBox Grid.Column="1"
                             x:Name="SearchTextBox"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="{DynamicResource ForegroundBrush}"
                             CaretBrush="{DynamicResource AccentBrush}"
                             FontSize="15"
                             VerticalAlignment="Center"
                             TextChanged="SearchTextBox_TextChanged"
                             PreviewKeyDown="SearchTextBox_PreviewKeyDown"/>

                    <!-- Placeholder -->
                    <TextBlock Grid.Column="1"
                               x:Name="PlaceholderText"
                               Text="Type a command or search..."
                               Foreground="{DynamicResource ForegroundSecondaryBrush}"
                               FontSize="15"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"
                               Visibility="Visible"/>

                    <!-- Shortcut hint -->
                    <Border Grid.Column="2"
                            Background="{DynamicResource CardBrush}"
                            CornerRadius="4"
                            Padding="6,3"
                            VerticalAlignment="Center">
                        <TextBlock Text="Esc"
                                   FontSize="11"
                                   FontFamily="Consolas"
                                   Foreground="{DynamicResource ForegroundSecondaryBrush}"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Category Tabs -->
            <Border Grid.Row="1"
                    Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="8,4">
                <StackPanel x:Name="CategoryTabs" Orientation="Horizontal">
                    <RadioButton x:Name="AllTab" Content="All" IsChecked="True"
                                 Style="{DynamicResource CategoryTabStyle}"
                                 Checked="CategoryTab_Checked" Tag="All"/>
                    <RadioButton x:Name="RecentTab" Content="Recent"
                                 Style="{DynamicResource CategoryTabStyle}"
                                 Checked="CategoryTab_Checked" Tag="Recent"/>
                    <RadioButton x:Name="CreateTab" Content="Create"
                                 Style="{DynamicResource CategoryTabStyle}"
                                 Checked="CategoryTab_Checked" Tag="Create"/>
                    <RadioButton x:Name="AnalyzeTab" Content="Analyze"
                                 Style="{DynamicResource CategoryTabStyle}"
                                 Checked="CategoryTab_Checked" Tag="Analyze"/>
                    <RadioButton x:Name="ModifyTab" Content="Modify"
                                 Style="{DynamicResource CategoryTabStyle}"
                                 Checked="CategoryTab_Checked" Tag="Modify"/>
                    <RadioButton x:Name="ViewTab" Content="View"
                                 Style="{DynamicResource CategoryTabStyle}"
                                 Checked="CategoryTab_Checked" Tag="View"/>
                </StackPanel>
            </Border>

            <!-- Commands List -->
            <ListBox Grid.Row="2"
                     x:Name="CommandsList"
                     Background="Transparent"
                     BorderThickness="0"
                     ItemContainerStyle="{StaticResource CommandItemStyle}"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     SelectionChanged="CommandsList_SelectionChanged"
                     MouseDoubleClick="CommandsList_MouseDoubleClick">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Icon -->
                            <Border Grid.Column="0"
                                    Width="32" Height="32"
                                    CornerRadius="6"
                                    Background="{Binding IconBackground}"
                                    Margin="0,0,12,0">
                                <Path Data="{Binding IconPath}"
                                      Fill="{Binding IconForeground}"
                                      Width="16" Height="16"
                                      Stretch="Uniform"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Border>

                            <!-- Command Info -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Name}"
                                           FontSize="13"
                                           FontWeight="Medium"/>
                                <TextBlock Text="{Binding Description}"
                                           FontSize="11"
                                           Opacity="0.7"
                                           TextTrimming="CharacterEllipsis"/>
                            </StackPanel>

                            <!-- Shortcut -->
                            <Border Grid.Column="2"
                                    Background="{DynamicResource SurfaceBrush}"
                                    CornerRadius="4"
                                    Padding="8,4"
                                    VerticalAlignment="Center"
                                    Visibility="{Binding ShortcutVisibility}">
                                <TextBlock Text="{Binding Shortcut}"
                                           FontSize="11"
                                           FontFamily="Consolas"
                                           Foreground="{DynamicResource ForegroundSecondaryBrush}"/>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Empty State -->
            <StackPanel Grid.Row="2"
                        x:Name="EmptyState"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Visibility="Collapsed">
                <Path Data="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z"
                      Fill="{DynamicResource ForegroundSecondaryBrush}"
                      Width="48" Height="48"
                      Stretch="Uniform"
                      Opacity="0.5"
                      HorizontalAlignment="Center"/>
                <TextBlock Text="No commands found"
                           FontSize="14"
                           Foreground="{DynamicResource ForegroundSecondaryBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,12,0,0"/>
                <TextBlock Text="Try a different search term"
                           FontSize="12"
                           Foreground="{DynamicResource ForegroundSecondaryBrush}"
                           Opacity="0.7"
                           HorizontalAlignment="Center"
                           Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Footer -->
            <Border Grid.Row="3"
                    Background="{DynamicResource SurfaceBrush}"
                    CornerRadius="0,0,12,12"
                    Padding="12,8"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,1,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Hints -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="↑↓" FontFamily="Consolas" FontSize="11" Foreground="{DynamicResource ForegroundSecondaryBrush}" Margin="0,0,4,0"/>
                        <TextBlock Text="Navigate" FontSize="11" Foreground="{DynamicResource ForegroundSecondaryBrush}" Margin="0,0,12,0"/>
                        <TextBlock Text="Enter" FontFamily="Consolas" FontSize="11" Foreground="{DynamicResource ForegroundSecondaryBrush}" Margin="0,0,4,0"/>
                        <TextBlock Text="Execute" FontSize="11" Foreground="{DynamicResource ForegroundSecondaryBrush}" Margin="0,0,12,0"/>
                        <TextBlock Text="Tab" FontFamily="Consolas" FontSize="11" Foreground="{DynamicResource ForegroundSecondaryBrush}" Margin="0,0,4,0"/>
                        <TextBlock Text="Autocomplete" FontSize="11" Foreground="{DynamicResource ForegroundSecondaryBrush}"/>
                    </StackPanel>

                    <!-- Result Count -->
                    <TextBlock Grid.Column="1"
                               x:Name="ResultCountText"
                               Text="0 commands"
                               FontSize="11"
                               Foreground="{DynamicResource ForegroundSecondaryBrush}"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
