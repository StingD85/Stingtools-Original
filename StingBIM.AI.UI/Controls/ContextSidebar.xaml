<UserControl x:Class="StingBIM.AI.UI.Controls.ContextSidebar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Root"
             Width="220">

    <UserControl.Resources>
        <!-- Section Header Style -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundSecondaryBrush}"/>
            <Setter Property="Margin" Value="0,12,0,6"/>
            <Setter Property="Typography.Capitals" Value="AllSmallCaps"/>
        </Style>

        <!-- Info Row Style -->
        <Style x:Key="InfoLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundSecondaryBrush}"/>
        </Style>

        <Style x:Key="InfoValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
        </Style>

        <!-- Recent Command Button Style -->
        <Style x:Key="RecentCommandButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border Background="{DynamicResource SurfaceBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1,0,0,0">
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="12">
            <StackPanel>
                <!-- Header -->
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Context"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource ForegroundBrush}"/>

                    <Button Grid.Column="1"
                            x:Name="RefreshButton"
                            Click="RefreshButton_Click"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="4"
                            Cursor="Hand"
                            ToolTip="Refresh context">
                        <Path Data="M17.65,6.35C16.2,4.9 14.21,4 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20C15.73,20 18.84,17.45 19.73,14H17.65C16.83,16.33 14.61,18 12,18A6,6 0 0,1 6,12A6,6 0 0,1 12,6C13.66,6 15.14,6.69 16.22,7.78L13,11H20V4L17.65,6.35Z"
                              Fill="{DynamicResource ForegroundSecondaryBrush}"
                              Width="14" Height="14" Stretch="Uniform"/>
                    </Button>
                </Grid>

                <!-- Connection Status -->
                <Border Background="{DynamicResource CardBrush}"
                        CornerRadius="6"
                        Padding="10,8"
                        Margin="0,0,0,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Ellipse x:Name="ConnectionIndicator"
                                 Width="8" Height="8"
                                 Fill="{DynamicResource SuccessBrush}"
                                 Margin="0,0,8,0"
                                 VerticalAlignment="Center"/>

                        <TextBlock Grid.Column="1"
                                   x:Name="ConnectionStatusText"
                                   Text="Connected to Revit"
                                   FontSize="12"
                                   Foreground="{DynamicResource ForegroundBrush}"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Active View Section -->
                <TextBlock Text="ACTIVE VIEW" Style="{StaticResource SectionHeaderStyle}"/>
                <Border Background="{DynamicResource CardBrush}"
                        CornerRadius="6"
                        Padding="10,8">
                    <StackPanel>
                        <TextBlock x:Name="ViewNameText"
                                   Text="Floor Plan - Level 1"
                                   Style="{StaticResource InfoValueStyle}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBlock Text="Type: " Style="{StaticResource InfoLabelStyle}"/>
                            <TextBlock x:Name="ViewTypeText"
                                       Text="Floor Plan"
                                       Style="{StaticResource InfoValueStyle}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                            <TextBlock Text="Level: " Style="{StaticResource InfoLabelStyle}"/>
                            <TextBlock x:Name="LevelText"
                                       Text="Level 1"
                                       Style="{StaticResource InfoValueStyle}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Selection Section -->
                <TextBlock Text="SELECTION" Style="{StaticResource SectionHeaderStyle}"/>
                <Border Background="{DynamicResource CardBrush}"
                        CornerRadius="6"
                        Padding="10,8">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock x:Name="SelectionCountText"
                                       Text="3 elements selected"
                                       Style="{StaticResource InfoValueStyle}"/>

                            <Button Grid.Column="1"
                                    x:Name="ClearSelectionButton"
                                    Click="ClearSelectionButton_Click"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Padding="4"
                                    Cursor="Hand"
                                    ToolTip="Clear selection"
                                    Visibility="Collapsed">
                                <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z"
                                      Fill="{DynamicResource ForegroundSecondaryBrush}"
                                      Width="12" Height="12" Stretch="Uniform"/>
                            </Button>
                        </Grid>

                        <!-- Element Types Breakdown -->
                        <ItemsControl x:Name="SelectionBreakdown"
                                      Margin="0,4,0,0">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                        <Ellipse Width="6" Height="6"
                                                 Fill="{DynamicResource AccentBrush}"
                                                 Margin="0,0,6,0"
                                                 VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding}"
                                                   FontSize="11"
                                                   Foreground="{DynamicResource ForegroundSecondaryBrush}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Model Stats Section -->
                <TextBlock Text="MODEL STATS" Style="{StaticResource SectionHeaderStyle}"/>
                <Border Background="{DynamicResource CardBrush}"
                        CornerRadius="6"
                        Padding="10,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,8">
                            <TextBlock Text="Walls" Style="{StaticResource InfoLabelStyle}"/>
                            <TextBlock x:Name="WallCountText" Text="124" Style="{StaticResource InfoValueStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,8">
                            <TextBlock Text="Doors" Style="{StaticResource InfoLabelStyle}"/>
                            <TextBlock x:Name="DoorCountText" Text="45" Style="{StaticResource InfoValueStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,8">
                            <TextBlock Text="Windows" Style="{StaticResource InfoLabelStyle}"/>
                            <TextBlock x:Name="WindowCountText" Text="67" Style="{StaticResource InfoValueStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,0,8">
                            <TextBlock Text="Rooms" Style="{StaticResource InfoLabelStyle}"/>
                            <TextBlock x:Name="RoomCountText" Text="23" Style="{StaticResource InfoValueStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="0">
                            <TextBlock Text="Levels" Style="{StaticResource InfoLabelStyle}"/>
                            <TextBlock x:Name="LevelCountText" Text="4" Style="{StaticResource InfoValueStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="1">
                            <TextBlock Text="Sheets" Style="{StaticResource InfoLabelStyle}"/>
                            <TextBlock x:Name="SheetCountText" Text="12" Style="{StaticResource InfoValueStyle}"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Recent Commands Section -->
                <TextBlock Text="RECENT COMMANDS" Style="{StaticResource SectionHeaderStyle}"/>
                <ItemsControl x:Name="RecentCommandsList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource RecentCommandButtonStyle}"
                                    Tag="{Binding Command}"
                                    Click="RecentCommand_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Path Data="M12,4V2A10,10 0 0,0 2,12H4A8,8 0 0,1 12,4Z"
                                          Fill="{DynamicResource ForegroundSecondaryBrush}"
                                          Width="12" Height="12" Stretch="Uniform"
                                          Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding DisplayText}"
                                               FontSize="11"
                                               Foreground="{DynamicResource ForegroundBrush}"
                                               TextTrimming="CharacterEllipsis"
                                               MaxWidth="160"/>
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- No recent commands message -->
                <TextBlock x:Name="NoRecentCommandsText"
                           Text="No recent commands"
                           FontSize="11"
                           Foreground="{DynamicResource ForegroundSecondaryBrush}"
                           FontStyle="Italic"
                           Margin="8,4"/>

                <!-- Undo History Section -->
                <TextBlock Text="UNDO HISTORY" Style="{StaticResource SectionHeaderStyle}"/>
                <ItemsControl x:Name="UndoHistoryList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{Binding Description}"
                                           FontSize="11"
                                           Foreground="{DynamicResource ForegroundSecondaryBrush}"
                                           TextTrimming="CharacterEllipsis"
                                           VerticalAlignment="Center"/>

                                <Button Grid.Column="1"
                                        Style="{StaticResource RecentCommandButtonStyle}"
                                        Tag="{Binding}"
                                        Click="UndoItem_Click"
                                        ToolTip="Undo this action"
                                        Padding="4">
                                    <Path Data="M12.5,8C9.85,8 7.45,9 5.6,10.6L2,7V16H11L7.38,12.38C8.77,11.22 10.54,10.5 12.5,10.5C16.04,10.5 19.05,12.81 20.1,16L22.47,15.22C21.08,11.03 17.15,8 12.5,8Z"
                                          Fill="{DynamicResource ForegroundSecondaryBrush}"
                                          Width="14" Height="14" Stretch="Uniform"/>
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- No undo history message -->
                <TextBlock x:Name="NoUndoHistoryText"
                           Text="No undo history"
                           FontSize="11"
                           Foreground="{DynamicResource ForegroundSecondaryBrush}"
                           FontStyle="Italic"
                           Margin="8,4"/>
            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>
