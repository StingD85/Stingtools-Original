<UserControl x:Class="StingBIM.AI.UI.Controls.SessionManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Root"
             Background="{DynamicResource BackgroundBrush}">

    <UserControl.Resources>
        <!-- Session Card Style -->
        <Style x:Key="SessionCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource SurfaceBrush}"
                Padding="16,12"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Path Grid.Column="0"
                      Data="M19,3H14.82C14.4,1.84 13.3,1 12,1C10.7,1 9.6,1.84 9.18,3H5A2,2 0 0,0 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5A2,2 0 0,0 19,3M12,3A1,1 0 0,1 13,4A1,1 0 0,1 12,5A1,1 0 0,1 11,4A1,1 0 0,1 12,3M7,7H17V5H19V19H5V5H7V7Z"
                      Fill="{DynamicResource AccentBrush}"
                      Width="22" Height="22"
                      Stretch="Uniform"
                      VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1"
                           Text="Sessions"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource ForegroundBrush}"
                           VerticalAlignment="Center"
                           Margin="12,0,0,0"/>

                <Button Grid.Column="2"
                        x:Name="CloseButton"
                        Click="CloseButton_Click"
                        Style="{DynamicResource IconButtonStyle}"
                        ToolTip="Close">
                    <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z"
                          Fill="{DynamicResource ForegroundSecondaryBrush}"
                          Width="16" Height="16"
                          Stretch="Uniform"/>
                </Button>
            </Grid>
        </Border>

        <!-- Actions Bar -->
        <Border Grid.Row="1"
                Background="{DynamicResource SurfaceBrush}"
                Padding="12,8"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search -->
                <Border Grid.Column="0"
                        Background="{DynamicResource CardBrush}"
                        CornerRadius="6"
                        Padding="8,6"
                        Margin="0,0,8,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Path Grid.Column="0"
                              Data="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z"
                              Fill="{DynamicResource ForegroundSecondaryBrush}"
                              Width="14" Height="14"
                              Stretch="Uniform"
                              VerticalAlignment="Center"
                              Margin="0,0,8,0"/>
                        <TextBox Grid.Column="1"
                                 x:Name="SearchTextBox"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="{DynamicResource ForegroundBrush}"
                                 FontSize="13"
                                 VerticalAlignment="Center"
                                 TextChanged="SearchTextBox_TextChanged"/>
                    </Grid>
                </Border>

                <!-- New Session Button -->
                <Button Grid.Column="1"
                        x:Name="NewSessionButton"
                        Click="NewSessionButton_Click"
                        Style="{DynamicResource PrimaryButtonStyle}"
                        Padding="12,6">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z"
                              Fill="White"
                              Width="14" Height="14"
                              Stretch="Uniform"
                              VerticalAlignment="Center"
                              Margin="0,0,6,0"/>
                        <TextBlock Text="New Session" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- Sessions List -->
        <ScrollViewer Grid.Row="2"
                      VerticalScrollBarVisibility="Auto"
                      Padding="12">
            <StackPanel>
                <!-- Current Session -->
                <TextBlock Text="Current Session"
                           FontSize="11"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource ForegroundSecondaryBrush}"
                           Margin="0,0,0,8"
                           Visibility="{Binding CurrentSessionVisibility, ElementName=Root}"/>

                <Border x:Name="CurrentSessionCard"
                        Style="{StaticResource SessionCardStyle}"
                        BorderBrush="{DynamicResource AccentBrush}"
                        BorderThickness="2"
                        Visibility="Collapsed">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Icon -->
                        <Border Grid.Column="0"
                                Width="40" Height="40"
                                CornerRadius="8"
                                Background="{DynamicResource AccentBrush}"
                                Margin="0,0,12,0">
                            <Path Data="M20,2H4A2,2 0 0,0 2,4V22L6,18H20A2,2 0 0,0 22,16V4A2,2 0 0,0 20,2M6,9H18V11H6M14,14H6V12H14M18,8H6V6H18"
                                  Fill="White"
                                  Width="20" Height="20"
                                  Stretch="Uniform"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                        </Border>

                        <!-- Info -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock x:Name="CurrentSessionName"
                                       Text="Untitled Session"
                                       FontSize="14"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource ForegroundBrush}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <TextBlock x:Name="CurrentSessionMessages"
                                           Text="0 messages"
                                           FontSize="11"
                                           Foreground="{DynamicResource ForegroundSecondaryBrush}"/>
                                <TextBlock Text=" • "
                                           FontSize="11"
                                           Foreground="{DynamicResource ForegroundSecondaryBrush}"/>
                                <TextBlock x:Name="CurrentSessionTime"
                                           Text="Started now"
                                           FontSize="11"
                                           Foreground="{DynamicResource ForegroundSecondaryBrush}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Actions -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                            <Button x:Name="SaveCurrentButton"
                                    Click="SaveCurrentButton_Click"
                                    Style="{DynamicResource IconButtonStyle}"
                                    ToolTip="Save session">
                                <Path Data="M15,9H5V5H15M12,19A3,3 0 0,1 9,16A3,3 0 0,1 12,13A3,3 0 0,1 15,16A3,3 0 0,1 12,19M17,3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V7L17,3Z"
                                      Fill="{DynamicResource ForegroundSecondaryBrush}"
                                      Width="16" Height="16"
                                      Stretch="Uniform"/>
                            </Button>
                            <Button x:Name="RenameCurrentButton"
                                    Click="RenameCurrentButton_Click"
                                    Style="{DynamicResource IconButtonStyle}"
                                    ToolTip="Rename session">
                                <Path Data="M20.71,7.04C21.1,6.65 21.1,6 20.71,5.63L18.37,3.29C18,2.9 17.35,2.9 16.96,3.29L15.12,5.12L18.87,8.87M3,17.25V21H6.75L17.81,9.93L14.06,6.18L3,17.25Z"
                                      Fill="{DynamicResource ForegroundSecondaryBrush}"
                                      Width="16" Height="16"
                                      Stretch="Uniform"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Saved Sessions Header -->
                <TextBlock Text="Saved Sessions"
                           FontSize="11"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource ForegroundSecondaryBrush}"
                           Margin="0,16,0,8"/>

                <!-- Sessions List -->
                <ItemsControl x:Name="SessionsList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource SessionCardStyle}"
                                    MouseLeftButtonUp="SessionCard_Click"
                                    Tag="{Binding Id}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Icon -->
                                    <Border Grid.Column="0"
                                            Width="40" Height="40"
                                            CornerRadius="8"
                                            Background="{DynamicResource SurfaceBrush}"
                                            Margin="0,0,12,0">
                                        <Path Data="M20,2H4A2,2 0 0,0 2,4V22L6,18H20A2,2 0 0,0 22,16V4A2,2 0 0,0 20,2M6,9H18V11H6M14,14H6V12H14M18,8H6V6H18"
                                              Fill="{DynamicResource ForegroundSecondaryBrush}"
                                              Width="18" Height="18"
                                              Stretch="Uniform"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                    </Border>

                                    <!-- Info -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}"
                                                   FontSize="13"
                                                   FontWeight="Medium"
                                                   Foreground="{DynamicResource ForegroundBrush}"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                            <TextBlock Text="{Binding MessageCount, StringFormat='{}{0} messages'}"
                                                       FontSize="11"
                                                       Foreground="{DynamicResource ForegroundSecondaryBrush}"/>
                                            <TextBlock Text=" • "
                                                       FontSize="11"
                                                       Foreground="{DynamicResource ForegroundSecondaryBrush}"/>
                                            <TextBlock Text="{Binding LastModifiedRelative}"
                                                       FontSize="11"
                                                       Foreground="{DynamicResource ForegroundSecondaryBrush}"/>
                                        </StackPanel>
                                        <TextBlock Text="{Binding ProjectName}"
                                                   FontSize="10"
                                                   Foreground="{DynamicResource ForegroundSecondaryBrush}"
                                                   Opacity="0.7"
                                                   Margin="0,2,0,0"
                                                   Visibility="{Binding ProjectVisibility}"/>
                                    </StackPanel>

                                    <!-- Actions -->
                                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                                        <Button Click="LoadSession_Click"
                                                Tag="{Binding Id}"
                                                Style="{DynamicResource IconButtonStyle}"
                                                ToolTip="Load session">
                                            <Path Data="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M6,4H13V9H18V20H6V4Z"
                                                  Fill="{DynamicResource ForegroundSecondaryBrush}"
                                                  Width="14" Height="14"
                                                  Stretch="Uniform"/>
                                        </Button>
                                        <Button Click="DeleteSession_Click"
                                                Tag="{Binding Id}"
                                                Style="{DynamicResource IconButtonStyle}"
                                                ToolTip="Delete session">
                                            <Path Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z"
                                                  Fill="{DynamicResource ForegroundSecondaryBrush}"
                                                  Width="14" Height="14"
                                                  Stretch="Uniform"/>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Empty State -->
                <StackPanel x:Name="EmptyState"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Margin="0,40"
                            Visibility="Collapsed">
                    <Path Data="M19,3H14.82C14.4,1.84 13.3,1 12,1C10.7,1 9.6,1.84 9.18,3H5A2,2 0 0,0 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5A2,2 0 0,0 19,3M12,3A1,1 0 0,1 13,4A1,1 0 0,1 12,5A1,1 0 0,1 11,4A1,1 0 0,1 12,3"
                          Fill="{DynamicResource ForegroundSecondaryBrush}"
                          Width="48" Height="48"
                          Stretch="Uniform"
                          Opacity="0.5"
                          HorizontalAlignment="Center"/>
                    <TextBlock Text="No saved sessions"
                               FontSize="14"
                               Foreground="{DynamicResource ForegroundSecondaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,12,0,0"/>
                    <TextBlock Text="Your conversation history will appear here"
                               FontSize="12"
                               Foreground="{DynamicResource ForegroundSecondaryBrush}"
                               Opacity="0.7"
                               HorizontalAlignment="Center"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
