<UserControl x:Class="StingBIM.AI.UI.Controls.DropZone"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Root"
             AllowDrop="True"
             DragEnter="OnDragEnter"
             DragLeave="OnDragLeave"
             DragOver="OnDragOver"
             Drop="OnDrop">

    <UserControl.Resources>
        <Storyboard x:Key="PulseAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="DropIndicator"
                           Storyboard.TargetProperty="Opacity"
                           From="0.6" To="1.0" Duration="0:0:0.5"
                           AutoReverse="True"/>
        </Storyboard>

        <Storyboard x:Key="BounceAnimation">
            <DoubleAnimation Storyboard.TargetName="DropIcon"
                           Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                           From="1" To="1.1" Duration="0:0:0.15"
                           AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="DropIcon"
                           Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                           From="1" To="1.1" Duration="0:0:0.15"
                           AutoReverse="True"/>
        </Storyboard>
    </UserControl.Resources>

    <Grid>
        <!-- Content placeholder (child content goes here) -->
        <ContentPresenter x:Name="ContentHost" Content="{Binding ElementName=Root, Path=Content}"/>

        <!-- Drop overlay (shown when dragging) -->
        <Border x:Name="DropOverlay"
                Background="#E6000000"
                Visibility="Collapsed">

            <!-- Drop indicator -->
            <Border x:Name="DropIndicator"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource AccentBrush}"
                    BorderThickness="2"
                    CornerRadius="16"
                    Padding="40,30"
                    Opacity="0.9">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="30"
                                      ShadowDepth="0"
                                      Color="#3B82F6"
                                      Opacity="0.5"/>
                </Border.Effect>

                <StackPanel HorizontalAlignment="Center">
                    <!-- Icon -->
                    <Border x:Name="DropIcon"
                            Width="64" Height="64"
                            Background="{DynamicResource AccentBrush}"
                            CornerRadius="32"
                            Margin="0,0,0,16"
                            HorizontalAlignment="Center"
                            RenderTransformOrigin="0.5,0.5">
                        <Border.RenderTransform>
                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                        </Border.RenderTransform>
                        <Path x:Name="IconPath"
                              Data="M9,16V10H5L12,3L19,10H15V16H9M5,20V18H19V20H5Z"
                              Fill="White"
                              Width="28" Height="28"
                              Stretch="Uniform"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                    </Border>

                    <!-- Text -->
                    <TextBlock x:Name="DropTitleText"
                               Text="Drop files here"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource ForegroundBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,6"/>

                    <TextBlock x:Name="DropSubtitleText"
                               Text="Images, IFC files, CSV schedules"
                               FontSize="12"
                               Foreground="{DynamicResource ForegroundSecondaryBrush}"
                               HorizontalAlignment="Center"/>

                    <!-- File type badges -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,16,0,0">
                        <Border Background="{DynamicResource CardBrush}"
                                CornerRadius="12"
                                Padding="10,4"
                                Margin="4,0">
                            <TextBlock Text=".ifc" FontSize="11"
                                       Foreground="{DynamicResource ForegroundSecondaryBrush}"/>
                        </Border>
                        <Border Background="{DynamicResource CardBrush}"
                                CornerRadius="12"
                                Padding="10,4"
                                Margin="4,0">
                            <TextBlock Text=".rvt" FontSize="11"
                                       Foreground="{DynamicResource ForegroundSecondaryBrush}"/>
                        </Border>
                        <Border Background="{DynamicResource CardBrush}"
                                CornerRadius="12"
                                Padding="10,4"
                                Margin="4,0">
                            <TextBlock Text=".csv" FontSize="11"
                                       Foreground="{DynamicResource ForegroundSecondaryBrush}"/>
                        </Border>
                        <Border Background="{DynamicResource CardBrush}"
                                CornerRadius="12"
                                Padding="10,4"
                                Margin="4,0">
                            <TextBlock Text=".png" FontSize="11"
                                       Foreground="{DynamicResource ForegroundSecondaryBrush}"/>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>

        <!-- Dashed border when dragging (alternative visual) -->
        <Border x:Name="DashedBorder"
                BorderThickness="2"
                CornerRadius="8"
                Margin="8"
                Visibility="Collapsed">
            <Border.BorderBrush>
                <VisualBrush>
                    <VisualBrush.Visual>
                        <Rectangle Width="6" Height="6"
                                   Stroke="{DynamicResource AccentBrush}"
                                   StrokeThickness="1"
                                   StrokeDashArray="2,2"/>
                    </VisualBrush.Visual>
                </VisualBrush>
            </Border.BorderBrush>
        </Border>
    </Grid>
</UserControl>
