<UserControl x:Class="StingBIM.AI.UI.Controls.ModelHealthDashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Root"
             Background="{DynamicResource BackgroundBrush}">

    <UserControl.Resources>
        <!-- Metric Card Style -->
        <Style x:Key="MetricCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12"/>
        </Style>

        <!-- Issue Item Style -->
        <Style x:Key="IssueItemStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource SurfaceBrush}"
                Padding="16,12"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Path Grid.Column="0"
                      Data="M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22A10,10 0 0,1 2,12A10,10 0 0,1 12,2M12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4M11,16.5L6.5,12L7.91,10.59L11,13.67L16.59,8.09L18,9.5L11,16.5Z"
                      Fill="{DynamicResource SuccessBrush}"
                      Width="24" Height="24"
                      Stretch="Uniform"
                      VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="Model Health"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource ForegroundBrush}"/>
                    <TextBlock x:Name="LastCheckedText"
                               Text="Last checked: Just now"
                               FontSize="11"
                               Foreground="{DynamicResource ForegroundSecondaryBrush}"/>
                </StackPanel>

                <!-- Refresh Button -->
                <Button Grid.Column="2"
                        x:Name="RefreshButton"
                        Click="RefreshButton_Click"
                        Style="{DynamicResource IconButtonStyle}"
                        ToolTip="Refresh analysis"
                        Margin="0,0,4,0">
                    <Path Data="M17.65,6.35C16.2,4.9 14.21,4 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20C15.73,20 18.84,17.45 19.73,14H17.65C16.83,16.33 14.61,18 12,18A6,6 0 0,1 6,12A6,6 0 0,1 12,6C13.66,6 15.14,6.69 16.22,7.78L13,11H20V4L17.65,6.35Z"
                          Fill="{DynamicResource ForegroundSecondaryBrush}"
                          Width="16" Height="16"
                          Stretch="Uniform"/>
                </Button>

                <!-- Close Button -->
                <Button Grid.Column="3"
                        x:Name="CloseButton"
                        Click="CloseButton_Click"
                        Style="{DynamicResource IconButtonStyle}"
                        ToolTip="Close">
                    <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z"
                          Fill="{DynamicResource ForegroundSecondaryBrush}"
                          Width="16" Height="16"
                          Stretch="Uniform"/>
                </Button>
            </Grid>
        </Border>

        <!-- Health Score & Metrics -->
        <Border Grid.Row="1" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Health Score Circle -->
                <Grid Grid.Column="0" Width="80" Height="80" Margin="0,0,16,0">
                    <Ellipse Stroke="{DynamicResource CardBrush}"
                             StrokeThickness="8"
                             Fill="Transparent"/>
                    <Ellipse x:Name="ScoreRing"
                             Stroke="{DynamicResource SuccessBrush}"
                             StrokeThickness="8"
                             Fill="Transparent"
                             StrokeDashArray="100 100"
                             StrokeDashOffset="25"
                             RenderTransformOrigin="0.5,0.5">
                        <Ellipse.RenderTransform>
                            <RotateTransform Angle="-90"/>
                        </Ellipse.RenderTransform>
                    </Ellipse>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock x:Name="ScoreText"
                                   Text="95"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource ForegroundBrush}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Score"
                                   FontSize="10"
                                   Foreground="{DynamicResource ForegroundSecondaryBrush}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!-- Quick Metrics -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Errors -->
                    <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource MetricCardStyle}" Margin="0,0,4,4">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="8" Height="8" Fill="{DynamicResource ErrorBrush}" Margin="0,0,6,0"/>
                                <TextBlock Text="Errors" FontSize="11" Foreground="{DynamicResource ForegroundSecondaryBrush}"/>
                            </StackPanel>
                            <TextBlock x:Name="ErrorCountText"
                                       Text="0"
                                       FontSize="20"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource ForegroundBrush}"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Warnings -->
                    <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource MetricCardStyle}" Margin="4,0,0,4">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="8" Height="8" Fill="{DynamicResource WarningBrush}" Margin="0,0,6,0"/>
                                <TextBlock Text="Warnings" FontSize="11" Foreground="{DynamicResource ForegroundSecondaryBrush}"/>
                            </StackPanel>
                            <TextBlock x:Name="WarningCountText"
                                       Text="3"
                                       FontSize="20"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource ForegroundBrush}"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Missing Parameters -->
                    <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource MetricCardStyle}" Margin="0,4,4,0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="8" Height="8" Fill="{DynamicResource InfoBrush}" Margin="0,0,6,0"/>
                                <TextBlock Text="Missing Params" FontSize="11" Foreground="{DynamicResource ForegroundSecondaryBrush}"/>
                            </StackPanel>
                            <TextBlock x:Name="MissingParamsText"
                                       Text="12"
                                       FontSize="20"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource ForegroundBrush}"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Elements -->
                    <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource MetricCardStyle}" Margin="4,4,0,0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="8" Height="8" Fill="{DynamicResource AccentBrush}" Margin="0,0,6,0"/>
                                <TextBlock Text="Elements" FontSize="11" Foreground="{DynamicResource ForegroundSecondaryBrush}"/>
                            </StackPanel>
                            <TextBlock x:Name="ElementCountText"
                                       Text="1,234"
                                       FontSize="20"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource ForegroundBrush}"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <!-- Issues List -->
        <ScrollViewer Grid.Row="2"
                      VerticalScrollBarVisibility="Auto"
                      Padding="16,0,16,16">
            <StackPanel>
                <!-- Category Filter -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <RadioButton x:Name="AllIssuesTab" Content="All" IsChecked="True"
                                 Style="{DynamicResource CategoryTabStyle}"
                                 Checked="IssueFilter_Changed" Tag="All"/>
                    <RadioButton x:Name="ErrorsTab" Content="Errors"
                                 Style="{DynamicResource CategoryTabStyle}"
                                 Checked="IssueFilter_Changed" Tag="Error"/>
                    <RadioButton x:Name="WarningsTab" Content="Warnings"
                                 Style="{DynamicResource CategoryTabStyle}"
                                 Checked="IssueFilter_Changed" Tag="Warning"/>
                    <RadioButton x:Name="InfoTab" Content="Info"
                                 Style="{DynamicResource CategoryTabStyle}"
                                 Checked="IssueFilter_Changed" Tag="Info"/>
                </StackPanel>

                <!-- Issues -->
                <ItemsControl x:Name="IssuesList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource IssueItemStyle}"
                                    MouseLeftButtonUp="Issue_Click"
                                    Tag="{Binding}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Severity Icon -->
                                    <Border Grid.Column="0"
                                            Width="28" Height="28"
                                            CornerRadius="6"
                                            Background="{Binding SeverityBackground}"
                                            Margin="0,0,10,0"
                                            VerticalAlignment="Center">
                                        <Path Data="{Binding SeverityIcon}"
                                              Fill="{Binding SeverityForeground}"
                                              Width="14" Height="14"
                                              Stretch="Uniform"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                    </Border>

                                    <!-- Issue Details -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Title}"
                                                   FontSize="12"
                                                   FontWeight="Medium"
                                                   Foreground="{DynamicResource ForegroundBrush}"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding Description}"
                                                   FontSize="11"
                                                   Foreground="{DynamicResource ForegroundSecondaryBrush}"
                                                   TextTrimming="CharacterEllipsis"
                                                   Margin="0,2,0,0"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                            <Border Background="{DynamicResource CardBrush}"
                                                    CornerRadius="3"
                                                    Padding="6,2"
                                                    Margin="0,0,6,0">
                                                <TextBlock Text="{Binding Category}"
                                                           FontSize="9"
                                                           Foreground="{DynamicResource ForegroundSecondaryBrush}"/>
                                            </Border>
                                            <TextBlock Text="{Binding AffectedCount, StringFormat='{}{0} affected'}"
                                                       FontSize="9"
                                                       Foreground="{DynamicResource ForegroundSecondaryBrush}"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Fix Button -->
                                    <Button Grid.Column="2"
                                            Content="Fix"
                                            Click="FixIssue_Click"
                                            Tag="{Binding}"
                                            Style="{DynamicResource SecondaryButtonStyle}"
                                            Padding="10,4"
                                            FontSize="11"
                                            VerticalAlignment="Center"
                                            Visibility="{Binding CanAutoFix, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- No Issues State -->
                <StackPanel x:Name="NoIssuesState"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Margin="0,30"
                            Visibility="Collapsed">
                    <Path Data="M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22A10,10 0 0,1 2,12A10,10 0 0,1 12,2M12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4M11,16.5L6.5,12L7.91,10.59L11,13.67L16.59,8.09L18,9.5L11,16.5Z"
                          Fill="{DynamicResource SuccessBrush}"
                          Width="48" Height="48"
                          Stretch="Uniform"
                          Opacity="0.7"
                          HorizontalAlignment="Center"/>
                    <TextBlock Text="No issues found!"
                               FontSize="14"
                               FontWeight="Medium"
                               Foreground="{DynamicResource ForegroundBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,12,0,0"/>
                    <TextBlock Text="Your model is in great shape"
                               FontSize="12"
                               Foreground="{DynamicResource ForegroundSecondaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer Actions -->
        <Border Grid.Row="3"
                Background="{DynamicResource SurfaceBrush}"
                Padding="16,12"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1"
                        x:Name="ExportButton"
                        Content="Export Report"
                        Click="ExportButton_Click"
                        Style="{DynamicResource SecondaryButtonStyle}"
                        Margin="0,0,8,0"/>

                <Button Grid.Column="2"
                        x:Name="FixAllButton"
                        Content="Fix All"
                        Click="FixAllButton_Click"
                        Style="{DynamicResource PrimaryButtonStyle}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
