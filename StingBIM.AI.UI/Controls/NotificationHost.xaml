<UserControl x:Class="StingBIM.AI.UI.Controls.NotificationHost"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:StingBIM.AI.UI.Controls"
             x:Name="Root"
             HorizontalAlignment="Right"
             VerticalAlignment="Top"
             Margin="0,16,16,0"
             IsHitTestVisible="True">

    <UserControl.Resources>
        <!-- Notification item container style -->
        <Style x:Key="NotificationItemContainerStyle" TargetType="ContentPresenter">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
    </UserControl.Resources>

    <StackPanel x:Name="NotificationStack"
                MaxWidth="400"
                MinWidth="300">
        <!-- Toast notifications will be added here dynamically -->
    </StackPanel>
</UserControl>
